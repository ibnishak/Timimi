{
    "description": "Chrome addon to save Tiddlywiki",
    "manifest_version": 2,
    "author": "Rizwan Ishak",
    "name": "timimi",
    "version": "2.1.0",
    "icons":
    {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background":
    {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action":
    {
        "browser_style": true,
        "default_icon": "icons/icon16.png"
    },
    "content_scripts": [
    {
        "matches": ["file:///*"],
        "js": ["content-script.js"]
    }],
    "options_ui": { 
         "page": "settings/options.html" 
     },
    "permissions": [
        "nativeMessaging",
        "storage",
        "notifications"
    ]
}
