{

    "description": "Firefox addon to save Tiddlywiki",
    "manifest_version": 2,
    "name": "timimi",
    "version": "1.1",
    "icons":
    {
        "16": "icons/index.svg",
        "32": "icons/index.svg",
        "48": "icons/index.svg",
        "96": "icons/index.svg"
    },
    "applications":
    {
        "gecko":
        {
            "id": "timimi@tesseract.com",
            "strict_min_version": "50.0"
        }
    },
    "background":
    {
        "scripts": ["background.js"]
    },

    "browser_action":
    {
        "browser_style": true,
        "default_icon": "icons/index.svg"
    },
    "content_scripts": [
    {
        "matches": ["file:///*"],
        "js": ["content-script.js"]
    }],
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "tabs"
    ]
}
